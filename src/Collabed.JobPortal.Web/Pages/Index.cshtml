@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Collabed.JobPortal.Localization
@using Volo.Abp.Users
@model Collabed.JobPortal.Web.Pages.IndexModel
@inject IHtmlLocalizer<JobPortalResource> L
@inject ICurrentUser CurrentUser
@section styles {
<abp-style src="/Pages/Index.css" />
}
@section scripts {
<abp-script src="/Pages/Index.js" />
}
<div class="container">
    <div class="p-5 text-center">
        <div class="d-inline-block bg-success text-white p-1 h5 rounded mb-4 " role="alert">
            <h5 class="m-1"> <i class="fas fa-rocket"></i> Congratulations, <strong>JobPortal</strong> is successfully running!</h5>
        </div>
        <h1>Welcome to the Application</h1>
        <p class="lead px-lg-5 mx-lg-5">@L["LongWelcomeMessage"]</p>

        @if (!CurrentUser.IsAuthenticated)
        {
            <a abp-button="Primary" href="~/Account/Login"><i class="fa fa-sign-in"></i> @L["Login"]</a>
        }

    </div>
    Primary Buttons:<br /><br />
    <button class="btn btn-primary">PrimaryButton</button><br /><br />
    <button class="btn btn-primary" disabled>PrimaryButton</button><br /><br />
    Secondary Buttons:<br /><br />
    <button class="btn btn-secondary">SecondaryButton</button><br /><br />
    <button class="btn btn-secondary" disabled>SecondaryButton</button><br /><br />
    Danger Buttons:<br /><br />
    <button class="btn btn-danger">DangerButton</button><br /><br />
    <button class="btn btn-danger" disabled>DangerButton</button><br /><br />
    Primary Link Buttons:<br /><br />
    <button class="btn btn-link-primary">PrimaryLinkButton</button><br /><br />
    <button class="btn btn-link-primary" disabled>PrimaryLinkButton</button><br /><br />
    Secondary Link Buttons:<br /><br />
    <button class="btn btn-link-secondary">SecondaryLinkButton</button><br /><br />
    <button class="btn btn-link-secondary" disabled>SecondaryLinkButton</button><br /><br />
    Danger Link Buttons:<br /><br />
    <button class="btn btn-link-danger">DangerLinkButton</button><br /><br />
    <button class="btn btn-link-danger" disabled>DangerLinkButton</button><br /><br />
    Tag Badges:<br />
    <span class="badge bg-primary">primary</span><br /><br />
    <span class="badge bg-secondary">secondary</span><br /><br />
    <span class="badge bg-success">success</span><br /><br />
    <span class="badge bg-danger">danger</span><br /><br />
    <span class="badge bg-warning">warning</span><br /><br />
    <span class="badge bg-light">light</span><br /><br />
    <span class="badge bg-dark">dark</span><br /><br />
    Tooltips: <br />
    <button type="button" class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="Tooltip on top">
        Tooltip on top
    </button>
    <button type="button" class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="right" title="Tooltip on right">
        Tooltip on right
    </button>
    <button type="button" class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Tooltip on bottom">
        Tooltip on bottom
    </button>
    <button type="button" class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="left" title="Tooltip on left">
        Tooltip on left
    </button>
    <br />
    Message Badges (Badges inside of an alert):<br />
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        <span class="badge bg-primary">
            primary
        </span>
        alert-primary
        <button class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </button>
    </div>
    <div class="alert alert-secondary alert-dismissible fade show" role="alert">
        <span class="badge bg-secondary">
            secondary
        </span>
        alert-secondary
        <button class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </button>
    </div>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <span class="badge bg-success">
            success
        </span>
        alert-success
        <button class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </button>
    </div>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <span class="badge bg-danger">
            danger
        </span>
        alert-danger
        <button class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </button>
    </div>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <span class="badge bg-warning">
            warning
        </span>
        alert-warning
        <button class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </button>
    </div>
    Popovers: <br />
    <br />
    <button type="button" class="btn btn-secondary" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="top" title="Popover Title" data-bs-content="Top popover">
        Popover on top
    </button>
    <button type="button" class="btn btn-secondary" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="right" title="Popover Title" data-bs-content="Right popover">
        Popover on right
    </button>
    <button type="button" class="btn btn-secondary" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="bottom" title="Popover Title" data-bs-content="Bottom popover">
        Popover on bottom
    </button>
    <button type="button" class="btn btn-secondary" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="left" title="Popover Title" data-bs-content="Left popover">
        Popover on left
    </button>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
</div>
