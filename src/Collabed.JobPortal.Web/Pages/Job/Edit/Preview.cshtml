@page
@model Collabed.JobPortal.Web.Pages.Job.Edit.PreviewModel

@section scripts {
<abp-script src="/Pages/Job/Edit/JobAdPreview.js"></abp-script>
}

@section styles {
    <abp-style src="/Pages/Job/Index.css" />
}

<form method="post" id="previewForm" asp-page="/" novalidate="novalidate">
    <input type="hidden" asp-for="Reference" id="jobReferenceHiddenInput" />
    <input type="hidden" asp-for="JobTitle" />
    <input type="hidden" asp-for="JobDescription" id="jobDescriptionHiddenInput" />
    <input type="hidden" asp-for="SubDescription" />
    <input type="hidden" asp-for="JobCategoryId" />
    <input type="hidden" asp-for="EmploymentTypeId" />
    <input type="hidden" asp-for="ContractTypeId" />
    <input type="hidden" asp-for="JobLocationTypeId" />
    <input type="hidden" asp-for="Skills" />
    <input type="hidden" asp-for="SupplementalPay" />
    <input type="hidden" asp-for="OtherCompanyBenefits" />
    <input type="hidden" asp-for="ExperienceLevelId" />
    <input type="hidden" asp-for="JobLocationId" />
    <input type="hidden" asp-for="StartDate" />
    <input type="hidden" asp-for="CandidateExperienceLevel" />
    <input type="hidden" asp-for="LocalLanguageRequired" />
    <input type="hidden" asp-for="LanguageId" />
    <input type="hidden" asp-for="IsNetZeroCompliant" />
    <input type="hidden" asp-for="SalaryPeriodId" />
    <input type="hidden" asp-for="SalaryMinimum" />
    <input type="hidden" asp-for="SalaryMaximum" />
    <input type="hidden" asp-for="IsSalaryNegotiable" />
    <input type="hidden" asp-for="PositionsAvailable" />
    <input type="hidden" asp-for="ApplicationDeadline" />
    <input type="hidden" asp-for="ScreeningQuestion1" />
    <input type="hidden" asp-for="DesiredAnswer1" />
    <input type="hidden" asp-for="ScreeningQuestion2" />
    <input type="hidden" asp-for="DesiredAnswer2" />
    <input type="hidden" asp-for="ScreeningQuestion3" />
    <input type="hidden" asp-for="DesiredAnswer3" />
    <input type="hidden" asp-for="IsCvRequired" />
    <input type="hidden" asp-for="IsCoverLetterRequired" />
    <input type="hidden" asp-for="IsOnlinePortfolioRequired" />
    <input type="hidden" name="Source" value="Preview" id="sourceHiddenInput" />

    <div class="row" style="margin-top:4%;padding-inline: 0.5%;">
        <div class="col-sm">
            <p class="heading-30">Preview Changes</p>
        </div>
        <div class="col-sm">
            <p style="text-align:end;">
                <a href="~/JobListings" class="btn btn-outline-secondary" style="margin-right:4px;">Cancel changes</a>
                <button class="btn btn-outline-secondary" onclick="backButtonOnClick(event)" style="margin-right:4px;">Back</button>
                <button class="btn btn-primary" onclick="updateButtonOnClick(event)" style="margin-left:4px;">Save Changes</button>
            </p>
        </div>
        <div class="card" style="padding: 0 !important;">
            <div class="card-header" style="background-color:#F2F4F7; border-bottom: 1px solid rgba(0, 0, 0, 0.175);">
                <div class="row" style="margin-bottom:8px;">
                    <div class="col-9">
                        <span class="badge rounded-pill bg-primary">New</span>
                    </div>
                    <div class="col-3" style="position: relative;">
@*                      <span style="position:absolute; right:0; margin-right:4px;">
                            <button class="btn btn-outline-primary" onclick="saveButtonOnClick(event)" style="margin-right:4px;">Save for later</button>
                            <button class="btn btn-outline-primary" onclick="shareButtonOnClick(event)" style="margin-left:4px;">Share listing</button>
                        </span>*@
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-10">
                        <p class="text-36">@Model.JobTitle</p>
                        <p>
                            <span style="color: #101828; font-size: 16px; font-weight: 400; line-height: 24px;">
                                Posted by @Model.GetOrganisationName()
                            </span>
                            <span style="color: #667085; font-weight: 400; font-size: 16px; line-height:24px;">
                                @Model.GetCurrentDate()
                            </span>
                        </p>
                        <br />
                        <p class="text-16-bold">
                            @if (!string.IsNullOrWhiteSpace(Model.GetEmploymentType()))
                            {
                                @Model.GetEmploymentType()
                                @if (!string.IsNullOrWhiteSpace(Model.GetContractType()) || !string.IsNullOrWhiteSpace(Model.GetSalaryRange()) ||
                               !string.IsNullOrWhiteSpace(Model.GetOfficeLocation()) || !string.IsNullOrWhiteSpace(Model.GetJobLocationType()))
                                {
                                    <i class="bi bi-dot" style="color:#2F70B6;"></i>
                                }
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.GetContractType()))
                            {
                                @Model.GetContractType()
                                @if (!string.IsNullOrWhiteSpace(Model.GetSalaryRange()) ||
                                     !string.IsNullOrWhiteSpace(Model.GetOfficeLocation()) || !string.IsNullOrWhiteSpace(Model.GetJobLocationType()))
                                {
                                    <i class="bi bi-dot" style="color:#2F70B6;"></i>
                                }
                            }
                            @if (!string.IsNullOrEmpty(Model.GetSalaryRange()))
                            {
                                @Model.GetSalaryRange()
                                @if (!string.IsNullOrWhiteSpace(Model.GetOfficeLocation()) || !string.IsNullOrWhiteSpace(Model.GetJobLocationType()))
                                {
                                    <i class="bi bi-dot" style="color:#2F70B6;"></i>
                                }
                            }
                            @if (!string.IsNullOrEmpty(Model.GetOfficeLocation()))
                            {
                                @Model.GetOfficeLocation()
                                @if (!string.IsNullOrWhiteSpace(Model.GetJobLocationType()))
                                {
                                    <i class="bi bi-dot" style="color:#2F70B6;"></i>
                                }
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.GetJobLocationType()))
                            {
                                @Model.GetJobLocationType()
                            }
                        </p>
                        <p><button class="btn btn-primary full-width-on-mobile" disabled>Apply now</button></p>
                    </div>
                    @*                    <div class="col-2">
                    <img src="https://picsum.photos/200/205/" class="job-ad-avatar" width="200" height="205" />
                    </div>*@
                    <div class="row">
                        <hr />
                        <div class="col-9">
                            <p style="font-weight: 500; font-size: 28px; line-height: 120%; color: #101828;">About the job</p>
                            <p style="font-weight: 500; font-size: 20px; line-height: 80%; color: #101828;">Description</p>
                            <p>@Html.Raw(Model.JobDescription)</p>
                            @if (!string.IsNullOrWhiteSpace(Model.Skills))
                            {
                                <hr />
                                <p style="font-weight: 500; font-size: 20px; line-height: 80%; color: #101828;">Skills</p>
                                <p style="font-weight: 400; font-size: 16px; line-height: 24px; color: #344054;">@Model.Skills</p>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.SupplementalPay))
                            {
                                <hr />
                                <p style="font-weight: 500; font-size: 20px; line-height: 80%; color: #101828;">Supplemental Pay</p>
                                <p style="font-weight: 400; font-size: 16px; line-height: 24px; color: #344054;"> @Model.SupplementalPay</p>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.OtherCompanyBenefits))
                            {
                                <hr />
                                <p style="font-weight: 500; font-size: 20px; line-height: 80%; color: #101828;">Other Benefits</p>
                                <p style="font-weight: 400; font-size: 16px; line-height: 24px; color: #344054;">@Model.OtherCompanyBenefits</p>
                            }
                            <p>
                                <button class="btn btn-primary full-width-on-mobile" disabled>Apply now</button>
                            </p>
                        </div>
                        <div class="col-3 no-display-on-mobile" style="background-color: #F2F4F7; ">
                            <div style="margin-inline: 24px;margin-block:24px;">
                                <p style="font-weight: 500;font-size: 28px;line-height: 120%;color: #101828;">Overview</p>
                                <hr />

                                <div class="row">
                                    <div class="col-2">
                                        <i class="bi bi-clock" style="color:#0C3779;"></i>
                                    </div>
                                    <div class="col-10">
                                        <span style="font-weight: 500;font-size: 20px;line-height: 80%;color: #101828;">Employment Type</span>
                                        <p style="font-weight: 400;font-size: 16px;line-height: 24px;color: #101828;">@Model.GetEmploymentType()</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-2">
                                        <i class="bi bi-briefcase" style="color:#0C3779;"></i>
                                    </div>
                                    <div class="col-10">
                                        <span style="font-weight: 500;font-size: 20px;line-height: 80%;color: #101828;">Contract Type</span>
                                        <p style="font-weight: 400;font-size: 16px;line-height: 24px;color: #101828;">@Model.GetContractType()</p>
                                    </div>
                                </div>
                                @if (Model.ExperienceLevelId.HasValue)
                                {
                                    <div class="row">
                                        <div class="col-2">
                                            <i class="bi bi-file-bar-graph" style="color:#0C3779;"></i>
                                        </div>
                                        <div class="col-10">
                                            <span style="font-weight: 500;font-size: 20px;line-height: 80%;color: #101828;">Experience level</span>
                                            <p style="font-weight: 400;font-size: 16px;line-height: 24px;color: #101828;">@Model.GetExperienceLevel()</p>
                                        </div>
                                    </div>
                                }
                                @if (Model.StartDate.HasValue)
                                {
                                    <div class="row">
                                        <div class="col-2">
                                            <i class="bi bi-calendar" style="color:#0C3779;"></i>
                                        </div>
                                        <div class="col-10">
                                            <span style="font-weight: 500;font-size: 20px;line-height: 80%;color: #101828;">Start Date</span>
                                            <p style="font-weight: 400;font-size: 16px;line-height: 24px;color: #101828;">@Model.StartDate.Value.Date.ToString("d")</p>
                                        </div>
                                    </div>
                                }
                                <div class="row">
                                    <div class="col-2">
                                        <i class="bi bi-geo-alt" style="color:#0C3779;"></i>
                                    </div>
                                    <div class="col-10">
                                        <span style="font-weight: 500;font-size: 20px;line-height: 80%;color: #101828;">Location</span>
                                        <p style="font-weight: 400;font-size: 16px;line-height: 24px;color: #101828;">
                                            @if (Model.JobLocationId.HasValue)
                                            {
                                                @Model.GetOfficeLocation()
                                            }
                                            @if (Model.JobLocationId.HasValue)
                                            {
                                                <span>, </span>
                                            }
                                            @Model.GetJobLocationType()
                                        </p>
                                    </div>
                                </div>
                                @if (Model.SalaryMaximum.HasValue || Model.SalaryMinimum.HasValue || (Model.IsSalaryNegotiable.HasValue && Model.IsSalaryNegotiable.Value == true))
                                {
                                    <div class="row">
                                        <div class="col-2">
                                            <i class="bi bi-currency-pound" style="color:#0C3779;"></i>
                                        </div>
                                        <div class="col-10">
                                            <span style="font-weight: 500;font-size: 20px;line-height: 80%;color: #101828;">Salary</span>
                                            @if (Model.SalaryMaximum.HasValue || Model.SalaryMinimum.HasValue)
                                            {
                                                <p style="font-weight: 400;font-size: 16px;line-height: 24px;color: #101828; margin-bottom: 0;">
                                                    @if (Model.SalaryMinimum.HasValue)
                                                    {
                                                        <i class="bi bi-currency-pound"></i>@Model.SalaryMinimum
                                                    }
                                                    @if (Model.SalaryMinimum.HasValue && Model.SalaryMaximum.HasValue)
                                                    {
                                                        <span> - </span>
                                                    }
                                                    @if (Model.SalaryMaximum.HasValue)
                                                    {
                                                        <i class="bi bi-currency-pound"></i>@Model.SalaryMaximum
                                                    }
                                                    @if (Model.SalaryPeriodId.HasValue)
                                                    {
                                                        <span>/ @Model.GetSalaryPeriodName()</span>
                                                    }
                                                </p>                                                
                                            }
                                            @if(Model.IsSalaryNegotiable.HasValue && Model.IsSalaryNegotiable.Value == true){
                                                <p style="font-weight: 400; font-size: 16px; line-height: 24px; color: #101828;">Negotiable</p>
                                            }
                                            else
                                            {
                                                <br />
                                            }
                                        </div>
                                    </div>
                                }
                                @if (Model.LocalLanguageRequired.HasValue && Model.LocalLanguageRequired.Value == true)
                                {
                                    <div class="row">
                                        <div class="col-2">
                                            <i class="bi bi-translate" style="color:#0C3779;"></i>
                                        </div>
                                        <div class="col-10">
                                            <span style="font-weight: 500;font-size: 20px;line-height: 80%;color: #101828;">Additional Language</span>
                                            <p style="font-weight: 400;font-size: 16px;line-height: 24px;color: #101828;">@Model.GetLocalLanguageName()</p>
                                        </div>
                                    </div>
                                }
                                @if (Model.IsNetZeroCompliant.HasValue)
                                {
                                    <div class="row">
                                        <div class="col-2">
                                            <i class="bi bi-lightning-charge-fill" style="color:#3BA190;"></i>
                                        </div>
                                        <div class="col-10">
                                            <span style="font-weight: 500;font-size: 20px;line-height: 80%;color: #101828;">NetZero Compliant</span>
                                            <p style="font-weight: 400;font-size: 16px;line-height: 24px;color: #101828;">
                                                @if (Model.IsNetZeroCompliant.Value)
                                                {
                                                    <span>Yes</span>
                                                }
                                                else
                                                {
                                                    <span>No</span>
                                                }
                                            </p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
