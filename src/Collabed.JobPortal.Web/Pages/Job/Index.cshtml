@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Collabed.JobPortal.Localization
@using Volo.Abp.Users
@model Collabed.JobPortal.Web.Pages.Job.JobModel

@inject IHtmlLocalizer<JobPortalResource> L
@inject ICurrentUser CurrentUser
@section styles {
<abp-style src="/Pages/Job/Index.css" />
}
@section scripts {
}

@{
    var categories ="";
    foreach (var item in Model.Category)
    {
        categories = $"{categories}Category={item}&";
    }
    var forwardParams = $"{categories}{nameof(Model.Predicate)}={Model.Predicate}&{nameof(Model.Location)}={Model.Location}&{nameof(Model.SelectedRadius)}={Model.SelectedRadius}&{nameof(Model.Sorting)}={Model.Sorting}&{nameof(Model.CurrentPage)}={Model.CurrentPage}";
    var previousPage = $"JobDashboard/Search?{forwardParams}";
}

<form method="post" id="previewForm" asp-page="JobAdInformation" novalidate="novalidate">

    <div class="row" style="margin-top:4%;padding-inline: 0.5%;">
        <div class="col-sm">
            <p class="hint-14"><a href=@previousPage class="back-link"><i class="bi bi-arrow-left back-arrow"></i>Back to results</a></p>
        </div>
        <div class="card" style="padding: 0 !important;">
            <div class="card-header" style="background-color:#F2F4F7; border-bottom: 1px solid rgba(0, 0, 0, 0.175);">
                <div class="row" style="margin-bottom:8px;">
                    <div class="col-9">
                        <span class="badge rounded-pill bg-primary">New</span>
                    </div>
                    <div class="col-3" style="position: relative;">
                        @*<span style="position:absolute; right:0; margin-right:4px;">
                        <button class="btn btn-outline-primary" onclick="saveButtonOnClick(event)" style="margin-right:4px;">Save for later</button>
                        <button class="btn btn-outline-primary" onclick="shareButtonOnClick(event)" style="margin-left:4px;">Share listing</button>
                        </span>*@
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-10">
                        <p class="text-36">@Model.JobDto.Title</p>
                        <p>
                            <span style="color: #101828; font-size: 16px; font-weight: 400; line-height: 24px;">
                                Posted by @Model.JobDto.OrganisationName
                            </span>
                            <span style="color: #667085; font-weight: 400; font-size: 16px; line-height:24px;">
                                on @Model.JobDto.PublishedDate.ToString("dd/MM/yyyy")
                            </span>
                        </p>
                        <br />
                        <p class="text-16-bold">
                            @if (!string.IsNullOrWhiteSpace(Model.JobDto.EmploymentType))
                            {
                                @Model.JobDto.EmploymentType
                                @if (!string.IsNullOrWhiteSpace(Model.JobDto.ContractType) || !string.IsNullOrWhiteSpace(Model.GetSalaryRange()) ||
                               !string.IsNullOrWhiteSpace(Model.JobDto.OfficeLocation) || !string.IsNullOrWhiteSpace(Model.JobDto.JobLocation))
                                {
                                    <i class="bi bi-dot" style="color:#2F70B6;"></i>
                                }
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.JobDto.ContractType))
                            {
                                @Model.JobDto.ContractType
                                @if (!string.IsNullOrWhiteSpace(Model.GetSalaryRange()) ||
                               !string.IsNullOrWhiteSpace(Model.JobDto.OfficeLocation) || !string.IsNullOrWhiteSpace(Model.JobDto.JobLocation))
                                {
                                    <i class="bi bi-dot" style="color:#2F70B6;"></i>
                                }
                            }
                            @if (!string.IsNullOrEmpty(Model.GetSalaryRange()))
                            {
                                @Model.GetSalaryRange()
                                @if (!string.IsNullOrWhiteSpace(Model.JobDto.OfficeLocation) || !string.IsNullOrWhiteSpace(Model.JobDto.JobLocation))
                                {
                                    <i class="bi bi-dot" style="color:#2F70B6;"></i>
                                }
                            }
                            @if (!string.IsNullOrEmpty(Model.JobDto.OfficeLocation))
                            {
                                @Model.JobDto.OfficeLocation
                                @if (!string.IsNullOrWhiteSpace(Model.JobDto.JobLocation))
                                {
                                    <i class="bi bi-dot" style="color:#2F70B6;"></i>
                                }
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.JobDto.JobLocation))
                            {
                                @Model.JobDto.JobLocation
                            }
                        </p>
                        <p><a class="btn btn-primary full-width-on-mobile" href=@Model.JobDto.ApplicationUrl target="_blank">Apply now</a></p>
                    </div>
                    @*                    <div class="col-2">
                    <img src="https://picsum.photos/200/205/" class="job-ad-avatar" width="200" height="205" />
                    </div>*@
                    <div class="row">
                        <hr />
                        <div class="col-9">
                            <p style="font-weight: 500; font-size: 28px; line-height: 120%; color: #101828;">About the job</p>
                            <p style="font-weight: 500; font-size: 20px; line-height: 80%; color: #101828;">Description</p>
                            <p>@Html.Raw(Model.JobDto.Description)</p>
                            @if (!string.IsNullOrWhiteSpace(Model.JobDto.Skills))
                            {
                                <hr />
                                <p style="font-weight: 500; font-size: 20px; line-height: 80%; color: #101828;">Skills</p>
                                <p style="font-weight: 400; font-size: 16px; line-height: 24px; color: #344054;">@Model.JobDto.Skills</p>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.JobDto.SupplementalPay))
                            {
                                <hr />
                                <p style="font-weight: 500; font-size: 20px; line-height: 80%; color: #101828;">Supplemental Pay</p>
                                <p style="font-weight: 400; font-size: 16px; line-height: 24px; color: #344054;"> @Model.JobDto.SupplementalPay</p>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.JobDto.SalaryBenefits))
                            {
                                <hr />
                                <p style="font-weight: 500; font-size: 20px; line-height: 80%; color: #101828;">Other Benefits</p>
                                <p style="font-weight: 400; font-size: 16px; line-height: 24px; color: #344054;">@Model.JobDto.SalaryBenefits</p>
                            }
                            <p>
                                <a class="btn btn-primary full-width-on-mobile" href=@Model.JobDto.ApplicationUrl target="_blank">Apply now</a>
                            </p>
                            <p> @*HACK TODO Pass return parameters from job page to apply page*@
                                <a class="btn btn-primary full-width-on-mobile" href="/Job/Apply/ContactDetails?jobReference=@Model.JobDto.Reference&@forwardParams" >Apply now via BMT</a>
                            </p>
                        </div>
                        <div class="col-3 no-display-on-mobile" style="background-color: #F2F4F7; ">
                            <div style="margin-inline: 24px;margin-block:24px;">
                                <p style="font-weight: 500;font-size: 28px;line-height: 120%;color: #101828;">Overview</p>
                                <hr />
                                @if (!string.IsNullOrWhiteSpace(Model.JobDto.EmploymentType))
                                {
                                    <div class="row">
                                        <div class="col-2">
                                            <i class="bi bi-clock" style="color:#0C3779;"></i>
                                        </div>
                                        <div class="col-10">
                                            <span style="font-weight: 500;font-size: 20px;line-height: 80%;color: #101828;">Employment Type</span>
                                            <p style="font-weight: 400;font-size: 16px;line-height: 24px;color: #101828;">@Model.JobDto.EmploymentType</p>
                                        </div>
                                    </div>
                                }
                                @if (!string.IsNullOrWhiteSpace(Model.JobDto.ContractType))
                                {
                                    <div class="row">
                                        <div class="col-2">
                                            <i class="bi bi-briefcase" style="color:#0C3779;"></i>
                                        </div>
                                        <div class="col-10">
                                            <span style="font-weight: 500;font-size: 20px;line-height: 80%;color: #101828;">Contract Type</span>
                                            <p style="font-weight: 400;font-size: 16px;line-height: 24px;color: #101828;">@Model.JobDto.ContractType</p>
                                        </div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.JobDto.ExperienceLevel))
                                {
                                    <div class="row">
                                        <div class="col-2">
                                            <i class="bi bi-file-bar-graph" style="color:#0C3779;"></i>
                                        </div>
                                        <div class="col-10">
                                            <span style="font-weight: 500;font-size: 20px;line-height: 80%;color: #101828;">Experience level</span>
                                            <p style="font-weight: 400;font-size: 16px;line-height: 24px;color: #101828;">@Model.JobDto.ExperienceLevel</p>
                                        </div>
                                    </div>
                                }
                                @if (Model.JobDto.StartDate.HasValue)
                                {
                                    <div class="row">
                                        <div class="col-2">
                                            <i class="bi bi-calendar" style="color:#0C3779;"></i>
                                        </div>
                                        <div class="col-10">
                                            <span style="font-weight: 500;font-size: 20px;line-height: 80%;color: #101828;">Start Date</span>
                                            <p style="font-weight: 400;font-size: 16px;line-height: 24px;color: #101828;">@Model.JobDto.StartDate.Value.Date.ToString("dd/MM/yyyy")</p>
                                        </div>
                                    </div>
                                }
                                @if (!string.IsNullOrWhiteSpace(Model.JobDto.JobLocation) || !string.IsNullOrWhiteSpace(Model.JobDto.OfficeLocation))
                                {
                                    <div class="row">
                                        <div class="col-2">
                                            <i class="bi bi-geo-alt" style="color:#0C3779;"></i>
                                        </div>
                                        <div class="col-10">
                                            <span style="font-weight: 500;font-size: 20px;line-height: 80%;color: #101828;">Location</span>
                                            <p style="font-weight: 400;font-size: 16px;line-height: 24px;color: #101828;">
                                                @if (!string.IsNullOrEmpty(Model.JobDto.OfficeLocation))
                                                {
                                                    @Model.JobDto.OfficeLocation
                                                }
                                                @if (!string.IsNullOrWhiteSpace(Model.JobDto.JobLocation) && !string.IsNullOrWhiteSpace(Model.JobDto.OfficeLocation))
                                                {
                                                    <span>, </span>
                                                }
                                                @Model.JobDto.JobLocation
                                            </p>
                                        </div>
                                    </div>
                                }
                                @if (Model.JobDto.SalaryMaximum.HasValue || Model.JobDto.SalaryMinimum.HasValue || (Model.JobDto.IsSalaryNegotiable.HasValue && Model.JobDto.IsSalaryNegotiable.Value == true))
                                {
                                    <div class="row">
                                        <div class="col-2">
                                            <i class="bi bi-currency-pound" style="color:#0C3779;"></i>
                                        </div>
                                        <div class="col-10">
                                            <span style="font-weight: 500;font-size: 20px;line-height: 80%;color: #101828;">Salary</span>
                                            @if (Model.JobDto.SalaryMaximum.HasValue || Model.JobDto.SalaryMinimum.HasValue)
                                            {
                                                <p style="font-weight: 400;font-size: 16px;line-height: 24px;color: #101828;">
                                                    @Model.GetSalaryRange()
                                                </p>
                                            }
                                            @if (Model.JobDto.IsSalaryNegotiable.HasValue && Model.JobDto.IsSalaryNegotiable.Value == true)
                                            {
                                                <p style="font-weight: 400; font-size: 16px; line-height: 24px; color: #101828;">Negotiable</p>
                                            }
                                        </div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.JobDto.LocalLanguage))
                                {
                                    <div class="row">
                                        <div class="col-2">
                                            <i class="bi bi-translate" style="color:#0C3779;"></i>
                                        </div>
                                        <div class="col-10">
                                            <span style="font-weight: 500;font-size: 20px;line-height: 80%;color: #101828;">Local Language</span>
                                            <p style="font-weight: 400;font-size: 16px;line-height: 24px;color: #101828;">@Model.JobDto.LocalLanguage</p>
                                        </div>
                                    </div>
                                }
                                @if (Model.JobDto.IsNetZeroCompliant.HasValue)
                                {
                                    <div class="row">
                                        <div class="col-2">
                                            <i class="bi bi-lightning-charge-fill" style="color:#3BA190;"></i>
                                        </div>
                                        <div class="col-10">
                                            <span style="font-weight: 500;font-size: 20px;line-height: 80%;color: #101828;">NetZero Compliant</span>
                                            <p style="font-weight: 400;font-size: 16px;line-height: 24px;color: #101828;">
                                                @if (Model.JobDto.IsNetZeroCompliant.Value)
                                                {
                                                    <span>Yes</span>
                                                }
                                                else
                                                {
                                                    <span>No</span>
                                                }
                                            </p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
