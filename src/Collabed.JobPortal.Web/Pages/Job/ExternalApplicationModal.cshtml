@page
@model Collabed.JobPortal.Web.Pages.Job.Apply.ExternalApplicationModalModel
@{
    Layout = null;
}
<abp-modal>
    <abp-modal-header title="@Model.JobTitle"></abp-modal-header>
    <abp-modal-body>
        <p>
            @Model.HiringCompany require you to apply for this job on their website. 
            <br>
            <br>
            Please wait while we redirect you.
        </p>
    </abp-modal-body>
    <abp-modal-footer>
        <button class="btn btn-primary" data-bs-dismiss="modal" type="button">Close</button>
    </abp-modal-footer>
</abp-modal>