@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Collabed.JobPortal.Localization
@using Volo.Abp.Users
@model Collabed.JobPortal.Web.Pages.JobDashboard.JobDashboardModel
@inject IHtmlLocalizer<JobPortalResource> L
@inject ICurrentUser CurrentUser
@section styles {
    <abp-style src="/jobdashboard.css" />
}
@section scripts {
}

<div style="background-color:#FFFFFF;">

    <div style="text-align:center; margin-bottom: 30px;">
        <p style="font-weight: 400; font-size: 20px; line-height: 30px; color: #101828;">Get ahead in construction</p>
        <p style="font-weight: 600; font-size: 48px; line-height: 60px; color: #2F70B6;">Build your talent and<br />boost your career</p>
    </div>
    <p style="text-align:center;margin-top: 50px; margin-bottom: 50px;"><a class="btn btn-primary" href="../JobDashboard/Search">View all jobs</a></p>
    <hr />
    <div style="text-align:center;margin-top:60px;">
        <p style="font-weight: 600; font-size: 36px; line-height: 44px; color: #101828;">Explore by category</p>
        <p style="font-weight: 400; font-size: 18px; line-height: 28px; color: #101828;">The job board designed for and by construction-industry professionals.</p>
    </div>
    <div class="tiles-wrapper">
        @foreach (var category in Model.Categories)
        {
            <div class="category-tile">
                <a href="../JobDashboard/Search?categoriesSelected=@category.Id" class="tile-link">
                    <div class="category-tile-content">
                        <p class="category-tile-header">
                            @category.Name
                        </p>
                        <p class="category-tile-jobs-count">
                            @category.JobsCount jobs available
                        </p>
                    </div>
                </a>
            </div>
        }

    </div>
</div>
<p style="text-align:center;margin-top: 40px;"><a class="btn btn-primary" href="../JobDashboard/Search">View all jobs</a></p>

