@page
@model Collabed.JobPortal.Web.Pages.JobListingsOld.DeleteJobListingModal
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@{
    Layout = null;
}
<form method="post" asp-page="/DeleteJobListingModal">
    <abp-modal>
        <abp-modal-header><h5 class="modal-title" style="font-weight:600; font-size:20px">Delete Listing</h5></abp-modal-header>
        <abp-modal-body>
            <p>
                Deleting a job listing will remove the post from job search and make it inactive to current applicants. 
                <br />
                <br />
                The job description will remain accessible, but all associated application records will be irreversibly deleted.
            </p>
        </abp-modal-body>
        <abp-modal-footer>
            <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">Close</button>
            <button class="btn btn-danger" data-busy-text="Deleting" type="submit">Delete</button>
        </abp-modal-footer>
    </abp-modal>
</form>