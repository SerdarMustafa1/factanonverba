@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Collabed.JobPortal.Web.Pages.Clients.Modals.EditPermissionsModal
@{
    Layout = null;
}
<form method="post" data-check-form-on-close="false" action="@Url.Page("/Clients/Modals/EditPermissionsModal")">
    <input asp-for="UserId" hidden />
    <abp-modal>
        <abp-modal-header><h5 class="modal-title" style="font-weight:600; font-size:20px">Edit Permissions</h5></abp-modal-header>
        <abp-modal-body>
            <p>By updating permissions of a company, you are either allowing them the ability to post a job or not.</p>
            <br />
            <p style="font-weight:600">Job posting permisions</p>
            <div style="padding-left:2px;" class="form-check form-switch">
                <label style="float: left; margin-top: 1px;" class="form-check-label">OFF</label>
                <input style="margin-left: 15px" class="form-check-input" type="checkbox" asp-for="@Model.JobPostingPermission">
                <label style="margin-left: 15px; margin-top: 1px; float: left;" class="form-check-label">ON</label>
            </div>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Save | AbpModalButtons.Cancel)"></abp-modal-footer>
    </abp-modal>
</form>